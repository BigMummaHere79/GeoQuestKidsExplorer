<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/css" href="/com/example/geoquestkidsexplorer/styles.css"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.geoquestkidsexplorer.controllers.PracticeQuizAfricaController">
    <!-- Top: Navigation Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="65.0" style="-fx-background-color: #3b82f6; -fx-padding: 10 20;">
            <children>
                <Button onAction="#backToGameModes" style="-fx-background-color: #60a5fa; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-background-radius: 25; -fx-padding: 10 15;
                               -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 0);"
                        text="⬅️ Back" />
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="questionCounterLabel" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 24px;"
                       text="Question 1 of 10" />
                <Region HBox.hgrow="ALWAYS" />
                <HBox alignment="CENTER" style="-fx-background-color: #60a5fa; -fx-background-radius: 25; -fx-padding: 10 15;
                        -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 0);">
                    <children>
                        <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 20px;" text="Score: " />
                        <Label fx:id="scoreLabel" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 20px;" text="0" />
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>

    <!-- Center: Main Content Container -->
    <center>
        <VBox alignment="CENTER">
            <children>
                <VBox alignment="TOP_CENTER" prefWidth="800.0" spacing="20.0" style="-fx-background-color: #f0f0f0;
                    -fx-padding: 20px; -fx-background-radius: 20px; -fx-border-radius: 20px;
                    -fx-effect: dropshadow(three-pass-light, rgba(0,0,0,0.2), 10, 0, 0, 0);">
                    <children>
                        <!-- Image and Question Tile -->
                        <VBox alignment="TOP_CENTER" prefWidth="700.0" spacing="15.0" style="-fx-background-color: #ffffff;
                            -fx-padding: 20px; -fx-background-radius: 15px; -fx-border-radius: 15px;
                            -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                            <children>
                                <!-- Placeholder for Country Image Tile -->
                                <VBox fx:id="countryImageTile" alignment="CENTER" prefHeight="200.0" prefWidth="300.0"
                                      style="-fx-background-color: #d1d5db; -fx-background-radius: 10px; -fx-border-radius: 10px;">
                                    <children>
                                        <Label fx:id="countryCodeLabel" text="FR">
                                            <font>
                                                <Font name="System Bold" size="96.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                                <!-- Question Label -->
                                <Label fx:id="questionLabel" text="What country is this?" wrapText="true">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                                <!-- New VBox to hold the quiz option tiles -->
                                <VBox fx:id="quizOptionsContainer" spacing="15.0" />
                            </children>
                        </VBox>

                        <!-- Feedback and Fun Facts Tile -->
                        <VBox alignment="CENTER" prefWidth="700.0" spacing="10.0" style="-fx-background-color: #e0e0e0;
                            -fx-padding: 15px; -fx-background-radius: 15px; -fx-border-radius: 15px;
                            -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                            <children>
                                <Label fx:id="feedbackLabel" alignment="CENTER" text="" textFill="#4caf50">
                                    <font>
                                        <Font name="System Bold" size="24.0" />
                                    </font>
                                </Label>
                                <HBox spacing="5.0">
                                    <children>
                                        <Label text="Fun Facts:">
                                            <font>
                                                <Font name="System Bold" size="18.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="funFactLabel" text="" wrapText="true">
                                            <font>
                                                <Font size="16.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Next Question Button -->
                        <Button fx:id="nextQuestionButton" onAction="#nextQuestion" prefWidth="200.0" style="-fx-background-color: #4caf50;
                            -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 5px;"
                                text="Next Question" visible="false" />
                    </children>
                </VBox>
            </children>
            <BorderPane.margin>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
            </BorderPane.margin>
        </VBox>
    </center>
</BorderPane>
