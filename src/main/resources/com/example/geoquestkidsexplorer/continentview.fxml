<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/css" href="/com/example/geoquestkidsexplorer/styles.css"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.geoquestkidsexplorer.controllers.ContinentsController"
            stylesheets="@styles.css">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <top>
        <!-- Top: Navigation Bar -->
        <HBox fx:id="navBar" alignment="CENTER_LEFT" prefHeight="65.0"
              styleClass="nav-bar">
            <children>
                <Button fx:id="backButton"  onAction="#backToContinents"
                        styleClass="back-button" text="â¬…ï¸ Back to Continents">
                    <HBox.margin>
                        <Insets left="16"/>
                    </HBox.margin>
                </Button>

                <Region HBox.hgrow="ALWAYS" />
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <VBox alignment="CENTER_LEFT" spacing="5.0">
                            <children>
                                <Label textAlignment="CENTER" fx:id="gameModeWelcomeLabel" text="" textFill="white">
                                    <font>
                                        <Font name="System Bold" size="25.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Region HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </top>

    <!-- Center: Main Content Container -->
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1150.0" style="-fx-background-color: #f0f0f0;
                -fx-padding: 0 7.5 0 7.5px;">
            <children>
                <!-- Main Content Container -->
                <VBox fx:id="bgPane" alignment="CENTER" prefHeight="695.0" prefWidth="800.0" styleClass="gradient-pane">
                    <children>
                        <Label styleClass="game-mode-first-label" style=" -fx-padding: 20 0;" text="Time to Test you're knowledge and play the game!" />
                        <Label styleClass="continent-label" style=" -fx-padding: 20 0;"
                               text="Choose you're Game Mode now!">
                            <font>
                                <Font size="20.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER" spacing="20.0">
                            <!-- Practice Mode Quiz Tile -->
                            <VBox fx:id="practiceModeTile" alignment="CENTER" onMouseClicked="#handleGameModeClick"
                                  prefHeight="200.0" prefWidth="250.0" style="-fx-background-color: #a7f3d0;
                                  -fx-background-radius: 15; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);"
                                  styleClass="continent-tile-container">
                                <children>
                                    <Label style="-fx-font-size: 60px;" text="âœï¸" />
                                    <Label styleClass="game-mode" text="Practice Mode Quiz" textAlignment="CENTER"/>
                                </children>
                            </VBox>

                            <!--Flash Cards Mode Tile -->
                            <VBox fx:id="flashCardsModeTile" alignment="CENTER" onMouseClicked="#handleGameModeClick"
                                  prefHeight="200.0" prefWidth="250.0" style="-fx-background-color: #ffcdd2;
                                  -fx-background-radius: 15; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);"
                                  styleClass="continent-tile-container">
                                  <children>
                                      <Label style="-fx-font-size: 60px;" text="ðŸƒ" />
                                      <Label styleClass="game-mode" text="Flash Cards Mode" textAlignment="CENTER"/>
                                  </children>
                            </VBox>

                            <!-- Test Mode Quiz Tile -->
                            <VBox fx:id="testModeTile" alignment="CENTER" onMouseClicked="#handleGameModeClick" prefHeight="200.0"
                                  prefWidth="250.0" style="-fx-background-color: #fed7aa; -fx-background-radius: 15;
                                  -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);"
                                  styleClass="continent-tile-container">
                                <children>
                                    <Label style="-fx-font-size: 60px;" text="ðŸ“" />
                                    <Label styleClass="game-mode" text="Test Mode Quiz" textAlignment="CENTER"/>
                                </children>
                            </VBox>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                    </VBox.margin>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>