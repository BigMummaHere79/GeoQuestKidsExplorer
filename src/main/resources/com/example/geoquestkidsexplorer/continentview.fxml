<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/css" href="/com/example/geoquestkidsexplorer/styles.css"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.geoquestkidsexplorer.controllers.ContinentsController">
    <!-- Center: Main Content -->
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1150.0" style="-fx-background-color: #f0f0f0;
        -fx-padding: 0 7.5 0 7.5px;">
            <children>
                <!-- Top: Navigation Bar -->
                <HBox alignment="CENTER_LEFT" prefHeight="65.0" style="-fx-background-color: #3b82f6; -fx-padding: 10 100;">
                    <children>
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#backToContinents" style="-fx-background-color: #60a5fa;
                     -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25; -fx-padding: 10 15;
                     -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 0);" text="⬅️ Back to Continents" />
                        <Label textAlignment="CENTER" fx:id="continentLabel" text="" textFill="#2d6f44">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                <!-- Main Content Container -->
                <VBox alignment="TOP_CENTER" prefHeight="695.0" prefWidth="800.0" spacing="10.0" style="-fx-background-color: #ffffff;
                    -fx-padding: 10px; -fx-background-radius: 20px; -fx-border-radius: 20px;
                    -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);">
                    <children>
                        <!-- Welcome Container -->
                        <VBox alignment="CENTER" prefHeight="50.0" prefWidth="1000.0" style="-fx-padding: 10px;">
                            <children>
                                <HBox>
                                    <children>
                                        <VBox>
                                            <children>
                                                <Label text="Choose your Game Mode">
                                                    <font>
                                                        <Font name="System Bold" size="36.0" />
                                                    </font>
                                                </Label>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                                <HBox alignment="CENTER" spacing="20.0">
                                    <!-- Practice Mode Quiz Tile -->
                                    <VBox fx:id="practiceModeTile" alignment="CENTER" onMouseClicked="#handleGameModeClick"
                                          prefHeight="200.0" prefWidth="250.0" style="-fx-background-color: #a7f3d0;
                                          -fx-background-radius: 15; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                                        <children>
                                            <Label style="-fx-font-size: 60px;" text="✍️" />
                                            <Label text="Practice Mode Quiz" textAlignment="CENTER">
                                                <font>
                                                    <Font name="System Bold" size="24.0" />
                                                </font>
                                            </Label>
                                            <Label text="Perfect your knowledge with endless questions." textFill="WHITE" />
                                        </children>
                                    </VBox>

                                    <Button fx:id="flashcardsButton" text="Flashcards" onAction="#handleFlashcards"
                                            style="-fx-background-color: #ffcdd2; -fx-background-radius: 10; -fx-padding: 12;
                                            -fx-text-fill: #000000; -fx-font-size: 14px; -fx-font-weight: bold;"/>


                                    <!-- Test Mode Quiz Tile -->
                                    <VBox fx:id="testModeTile" alignment="CENTER" onMouseClicked="#handleGameModeClick" prefHeight="200.0"
                                          prefWidth="250.0" style="-fx-background-color: #fed7aa; -fx-background-radius: 15;
                                          -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                                        <children>
                                            <Label style="-fx-font-size: 60px;" text="📝" />
                                            <Label text="Test Mode Quiz" textAlignment="CENTER">
                                                <font>
                                                    <Font name="System Bold" size="24.0" />
                                                </font>
                                            </Label>
                                            <Label text="Challenge yourself with 10 random questions." textFill="WHITE" />
                                        </children>
                                    </VBox>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </VBox.margin>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>