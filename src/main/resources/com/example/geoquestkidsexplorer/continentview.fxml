<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.geoquestkidsexplorer.controllers.ContinentsController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <top>
        <!-- Top: Navigation Bar -->
        <HBox alignment="CENTER_LEFT" prefHeight="65.0" style="-fx-background-color: #63acbe; -fx-padding: 10 100;">
            <children>
                <Button fx:id="backButton" mnemonicParsing="false" onAction="#backToContinents" style="-fx-background-color: #B2D5D8;
                     -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25; -fx-padding: 10 15;
                     -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 0);" text="â¬…ï¸ Back to Continents" />
                <Region HBox.hgrow="ALWAYS" />
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <VBox alignment="CENTER_LEFT" spacing="5.0">
                            <children>
                                <Label textAlignment="CENTER" fx:id="gameModeWelcomeLabel" text="" textFill="white">
                                <!--<Label style="-fx-text-fill: white; -fx-font-weight: bold;
                                       -fx-padding: 0 0 0 10px;"
                                       text="Game Mode Control">-->
                                    <font>
                                        <Font name="System Bold" size="25.0" />
                                    </font>
                                </Label>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <Region HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </top>

    <!-- Center: Main Content Container -->
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1150.0" style="-fx-background-color: #f0f0f0;
                -fx-padding: 0 7.5 0 7.5px;">
            <children>
                <!-- Main Content Container -->
                <VBox alignment="CENTER" prefHeight="695.0" prefWidth="800.0" spacing="10.0"
                      style="-fx-background-color: #ffffff; -fx-background-radius: 20px; -fx-border-radius: 20px;
                            -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 0);">
                    <children>
                        <Label text="Time to Test you're knowledge and play the game!">
                            <font>
                                <Font name="System Bold" size="36.0" />
                            </font>
                        </Label>
                        <Label style="-fx-text-fill: black; -fx-font-weight: bold;"
                               text="Choose you're Game Mode now!">
                            <font>
                                <Font size="20.0" />
                            </font>
                        </Label>
                        <HBox alignment="CENTER" spacing="20.0">
                            <!-- Practice Mode Quiz Tile -->
                            <VBox fx:id="practiceModeTile" alignment="CENTER" onMouseClicked="#handleGameModeClick"
                                  prefHeight="200.0" prefWidth="250.0" style="-fx-background-color: #a7f3d0;
                                  -fx-background-radius: 15; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                                <children>
                                    <Label style="-fx-font-size: 60px;" text="âœï¸" />
                                    <Label text="Practice Mode Quiz" textAlignment="CENTER">
                                        <font>
                                            <Font name="System Bold" size="24.0" />
                                        </font>
                                    </Label>
                                </children>
                            </VBox>

                            <!--Flash Cards Mode Tile -->
                            <VBox fx:id="flashCardsModeTile" alignment="CENTER" onMouseClicked="#handleGameModeClick"
                                  prefHeight="200.0" prefWidth="250.0" style="-fx-background-color: #ffcdd2;
                                  -fx-background-radius: 15; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                                  <children>
                                      <Label style="-fx-font-size: 60px;" text="ðŸƒ" />
                                      <Label text="Flash Cards Mode" textAlignment="CENTER">
                                          <font>
                                              <Font name="System Bold" size="24.0" />
                                          </font>
                                      </Label>
                                  </children>
                            </VBox>

                            <!-- Test Mode Quiz Tile -->
                            <VBox fx:id="testModeTile" alignment="CENTER" onMouseClicked="#handleGameModeClick" prefHeight="200.0"
                                  prefWidth="250.0" style="-fx-background-color: #fed7aa; -fx-background-radius: 15;
                                  -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                                <children>
                                    <Label style="-fx-font-size: 60px;" text="ðŸ“" />
                                    <Label text="Test Mode Quiz" textAlignment="CENTER">
                                        <font>
                                            <Font name="System Bold" size="24.0" />
                                        </font>
                                    </Label>
                                </children>
                            </VBox>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
                    </VBox.margin>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>