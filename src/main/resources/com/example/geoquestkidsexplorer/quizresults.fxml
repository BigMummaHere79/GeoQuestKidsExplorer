<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/css" href="/com/example/geoquestkidsexplorer/styles.css"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0"
      style="-fx-background-color: #f0f0f0; -fx-padding: 30; -fx-background-radius: 20;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.geoquestkidsexplorer.controllers.QuizResultsController">

    <children>
        <Label fx:id="messageLabel" text="You've completed the quiz!" wrapText="true">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <Label fx:id="scoreLabel" text="Your Score: 0/10" wrapText="true">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <Label fx:id="passFailMessageLabel" text="Congratulations! You passed and unlocked the next continent!" wrapText="true">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <VBox alignment="CENTER" spacing="10.0">
            <Button fx:id="mainButton" mnemonicParsing="false" onAction="#handleMainButton"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5px;"
                    text="Continue to Next Adventure" />
            <Button fx:id="secondaryButton" mnemonicParsing="false" onAction="#handleSecondaryButton"
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5px;"
                    text="Try the Practice Mode Again for more enjoyable journey!" />
        </VBox>

        <VBox alignment="CENTER" spacing="10.0">
            <!--<children>
                <Button fx:id="continueButton" mnemonicParsing="false" text="Continue to next Continent" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" />
                <Button fx:id="retryButton" mnemonicParsing="false" text="Retry Quiz" style="-fx-background-color: #FFC107; -fx-text-fill: white; -fx-font-weight: bold;" />
                <Button fx:id="practiceButton" mnemonicParsing="false" text="Go to Practice Mode" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;" />
            </children>-->
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </VBox>
    </children>
</VBox>
