<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import java.lang.String?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.geoquestkidsexplorer.controllers.LoginController" style="-fx-background-color: #f0f0f0;">
    <children>
        <HBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
              spacing="20.0">
            <children>
                <VBox fx:id="loginForm" alignment="CENTER" prefHeight="400.0" prefWidth="350.0" spacing="20.0"
                      style="-fx-background-color: #ffffff; -fx-padding: 20px; -fx-background-radius: 10px;
                             -fx-border-radius: 10px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);">
                    <children>
                        <Label text="Login">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label text="Enter your credentials to access the app." />
                        <VBox spacing="5.0" style="-fx-alignment: CENTER;">
                            <children>
                                <Label text="Email Address" />
                                <TextField fx:id="loginEmailField" promptText="you@example.com" />
                            </children>
                        </VBox>
                        <VBox spacing="5.0" style="-fx-alignment: CENTER;">
                            <children>
                                <Label text="Password" />
                                <PasswordField fx:id="loginPasswordField" promptText="••••••••" />
                            </children>
                        </VBox>
                        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" prefWidth="200.0"
                                style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold;
                                       -fx-background-radius: 5px;" text="Sign in" />
                        <HBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Label text="Don't have an account?" />
                                <Button mnemonicParsing="false" onAction="#switchToRegister" style="-fx-text-fill: #3b82f6;
                                        -fx-background-color: transparent;" text="Register" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <VBox fx:id="registerForm" alignment="CENTER" prefHeight="400.0" prefWidth="350.0" spacing="10.0"
                      style="-fx-background-color: #ffffff; -fx-padding: 20px; -fx-background-radius: 10px;
                             -fx-border-radius: 10px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);">
                    <children>
                        <Label text="Register">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>
                        <Label text="Create a new account to get started." />

                        <VBox spacing="5.0" style="-fx-alignment: CENTER;">
                            <children>
                                <Label text="Username" />
                                <TextField fx:id="registerUsernameField" promptText="" />
                            </children>
                        </VBox>

                        <VBox spacing="5.0" style="-fx-alignment: CENTER;">
                            <children>
                                <Label text="Email Address" />
                                <TextField fx:id="registerEmailField" promptText="you@example.com" />
                            </children>
                        </VBox>

                        <VBox spacing="5.0" style="-fx-alignment: CENTER;">
                            <children>
                                <Label text="Role" />
                                <ComboBox fx:id="roleCombo" promptText="Pick a role" prefWidth="220">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="Student"/>
                                            <String fx:value="Teacher"/>
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                            </children>
                        </VBox>

                        <VBox spacing="5.0" style="-fx-alignment: CENTER;">
                            <children>
                                <Label text="Password" />
                                <PasswordField fx:id="registerPasswordField" promptText="••••••••" />
                            </children>
                        </VBox>

                        <VBox spacing="5.0" style="-fx-alignment: CENTER;">
                            <children>
                                <Label text="Confirm Password" />
                                <PasswordField fx:id="confirmPasswordField" promptText="••••••••" />
                            </children>
                        </VBox>

                        <!-- Simple Avatar Picker -->
                        <VBox spacing="6.0" style="-fx-alignment: CENTER; -fx-background-color: #f9fafb; -fx-padding: 10; -fx-background-radius: 8;">
                            <children>
                                <ComboBox fx:id="avatarCombo" promptText="Pick an avatar" prefWidth="220">
                                    <items>
                                        <FXCollections fx:factory="observableArrayList">
                                            <String fx:value="👦 Explorer Boy"/>
                                            <String fx:value="👧 Explorer Girl"/>
                                            <String fx:value="👨‍🎓 Student (Boy)"/>
                                            <String fx:value="👩‍🎓 Student (Girl)"/>
                                        </FXCollections>
                                    </items>
                                </ComboBox>
                            </children>
                        </VBox>

                        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegister" prefWidth="200.0"
                                style="-fx-background-color: #3b82f6; -fx-text-fill: white; -fx-font-weight: bold;
                                       -fx-background-radius: 5px;" text="Sign up" />

                        <HBox alignment="CENTER" spacing="5.0">
                            <children>
                                <Label text="Already have an account?" />
                                <Button mnemonicParsing="false" onAction="#switchToLogin" style="-fx-text-fill: #3b82f6;
                                        -fx-background-color: transparent;" text="Login" />
                            </children>
                        </HBox>
                    </children>
                </VBox>

                <VBox alignment="CENTER" prefHeight="600.0" prefWidth="700.0" spacing="10.0"
                      style="-fx-background-color: #dbeafe; -fx-padding: 20px; -fx-background-radius: 10px;
                             -fx-border-radius: 10px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);">
                    <children>
                        <!-- Logo Image -->
                        <ImageView>
                            <image>
                                <Image url="@images/geoquestlogo.PNG" preserveRatio="true" />
                            </image>
                            <fitWidth>300.0</fitWidth> <!-- Adjust width as needed -->
                            <fitHeight>300.0</fitHeight> <!-- Adjust height as needed -->
                        </ImageView>
                        <!-- Welcome Labels -->
                        <Label alignment="CENTER" contentDisplay="CENTER" text="Join the Fun and Start your Amazing Geography Journey!"
                               textAlignment="CENTER" wrapText="true">
                            <font>
                                <Font name="System Bold" size="20.0" />
                            </font>
                        </Label>
                        <Label text="Explore Continents, learn about Countries, and become a Geography expert!"
                               textAlignment="CENTER" wrapText="true" />
                    </children>
                </VBox>
            </children>
        </HBox>

        <Label fx:id="messageLabel" style="-fx-text-fill: red; -fx-font-size: 14px; -fx-padding: 10px 0 0 0;" />
    </children>
</VBox>
