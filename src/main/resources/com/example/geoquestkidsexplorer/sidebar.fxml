<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/css" href="/com/example/geoquestkidsexplorer/styles.css"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<VBox fx:id="sidebar" prefWidth="200.0" style="-fx-background-color: #63acbe; -fx-padding: 10; -fx-spacing: 10;
      -fx-alignment: center-left;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.geoquestkidsexplorer.controllers.SidebarController">
    <children>
        <Button fx:id="homeButton" graphicTextGap="10" onMouseEntered="#expandSidebar" onMouseExited="#collapseSidebar"
                onAction="#navigateToHome" styleClass="sidebar-button">
            <graphic>
                <Label text="🏠" style="-fx-font-size: 24px;" />
            </graphic>
            <text>Dashboard</text>
        </Button>
        <Button fx:id="funFactsButton" graphicTextGap="10" onMouseEntered="#expandSidebar" onMouseExited="#collapseSidebar"
                onAction="#openFunFacts" styleClass="sidebar-button">
            <graphic>
                <Label text="📚" style="-fx-font-size: 24px;" />
            </graphic>
            <text>Fun Facts Library</text>
        </Button>
        <Button fx:id="myProgressButton" graphicTextGap="10" onMouseEntered="#expandSidebar" onMouseExited="#collapseSidebar"
                onAction="#openMyProgress" styleClass="sidebar-button">
            <graphic>
                <Label text="👤" style="-fx-font-size: 24px;" />
            </graphic>
            <text>My Progress</text>
        </Button>
        <Button fx:id="myAchievementsButton" graphicTextGap="10" onMouseEntered="#expandSidebar" onMouseExited="#collapseSidebar"
                onAction="#openMyAchievements" styleClass="sidebar-button">
            <graphic>
                <Label text="🏆" style="-fx-font-size: 24px;" />
            </graphic>
            <text>My Achievements</text>
        </Button>
    </children>
</VBox>