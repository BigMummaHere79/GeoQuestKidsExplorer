<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/css" href="/com/example/geoquestkidsexplorer/styles.css"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.canvas.Canvas?> <!-- NOTE: adding this for additional animation -->

<?import java.net.URL?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0"
      style="-fx-background-color: #f0f0f0; -fx-padding: 30; -fx-background-radius: 20;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.geoquestkidsexplorer.controllers.TestResultsController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <children>
        <Label style="-fx-font-weight: bold; -fx-font-size: 24px;" text="You've completed the quiz!" wrapText="true">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <!-- HBox to center the animationPane horizontally -->
        <HBox alignment="CENTER">
            <!-- Pane to overlay trophy and confetti, sized to match canvas -->
            <Pane fx:id="animationPane" prefHeight="300.0" prefWidth="300.0">
                <children>
                    <!-- Canvas for confetti effect -->
                    <Canvas fx:id="confettiCanvas" width="300.0" height="300.0" visible="false" managed="false" />
                    <!-- Trophy Label for emoji -->
                    <Label fx:id="trophyLabel" text="ðŸ†" visible="false" managed="false" textAlignment="CENTER">
                        <font>
                            <Font size="135.0" /> <!-- Larger font for trophy -->
                        </font>
                    </Label>
                </children>
                <HBox.margin>
                    <Insets top="10.0" />
                </HBox.margin>
            </Pane>
            <!-- Fail Label for emoji when user fails -->
            <Label fx:id="failLabel" text="ðŸŽ®" visible="false" managed="false" textAlignment="CENTER">
                <font>
                    <Font size="135.0" /> <!-- Same size as trophy for consistency -->
                </font>
                <HBox.margin>
                    <Insets top="10.0" />
                </HBox.margin>
            </Label>
        </HBox>

        <Label fx:id="scoreLabel" text="Your Score: 0/10" wrapText="true">
            <font>
                <Font size="18.0" />
            </font>
        </Label>

        <Label fx:id="messageLabel" text="Congratulations! You passed and unlocked the next continent!" wrapText="true">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>

        <VBox alignment="CENTER" spacing="10.0">
            <Button fx:id="mainButton" mnemonicParsing="false" onAction="#handleMainButton"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5px;"
                    text="Continue to Next Adventure" styleClass="continent-tile-container"/>
            <Button fx:id="secondaryButton" mnemonicParsing="false" onAction="#handleSecondaryButton"
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5px;"
                    text="Go back to practice mode" styleClass="continent-tile-container"/>
            <VBox.margin>
                <Insets top="10.0" />
            </VBox.margin>
        </VBox>
    </children>
</VBox>
