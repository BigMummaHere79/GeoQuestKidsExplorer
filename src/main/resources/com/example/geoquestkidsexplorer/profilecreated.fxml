<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import java.net.URL?>
<VBox alignment="CENTER" prefHeight="800.0" prefWidth="1200.0" spacing="20.0" style="-fx-background-color: #f0f0f0;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.geoquestkidsexplorer.controllers.ProfileCreatedController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <children>
        <VBox alignment="CENTER" prefHeight="600.0" prefWidth="1000.0" spacing="20.0" style="-fx-background-color: #ffffff;
        -fx-padding: 40px; -fx-background-radius: 10px; -fx-border-radius: 10px;
        -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);">
            <children>
                <Label text="Profile Created!">
                    <font>
                        <Font name="System Bold" size="28.0" />
                    </font>
                </Label>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="250.0" spacing="10.0"
                      style="-fx-background-color: #e0e0e0; -fx-padding: 20px; -fx-background-radius: 8px;
                      -fx-border-radius: 8px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                    <children>
                        <Label fx:id="explorerAvatarLabel" text="ðŸ‘¦">
                            <font>
                                <Font size="60.0" />
                            </font>
                        </Label>
                        <Label fx:id="explorerNameLabel" text="Your Explorer Name">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                        <Label text="Ready for Adventure!">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
                <Label alignment="CENTER" contentDisplay="CENTER"
                       text="Welcome to the GeoQuest family! Your Profile has been created and you're ready to start your geographic adventure!"
                       textAlignment="CENTER" wrapText="true">
                    <font>
                        <Font size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Label>
                <Button fx:id="startButton" mnemonicParsing="false" onAction="#startAdventure" prefWidth="300.0"
                        style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-weight: bold;
                        -fx-background-radius: 5px;" text="Click to Start Geographic Adventure" styleClass="continent-tile-container">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</VBox>