<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/css" href="/com/example/geoquestkidsexplorer/styles.css"?>

<!--Import all the JavaFX UI elements that I'll be using-->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>

<!--Root Container-->
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<BorderPane prefHeight="800.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.geoquestkidsexplorer.controllers.TestQuizController"
            stylesheets="@styles.css">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>

    <!-- Navigation Bar-->
    <top>
        <HBox fx:id="navBar" styleClass="nav-bar" alignment="CENTER_LEFT" prefHeight="65.0">
            <children>
                <!-- Back Button-->
                <Button fx:id="backButton" onAction="#backToContinentView"
                        styleClass="back-button" text="⬅️ Back" >
                    <HBox.margin>
                        <Insets left ="16" />
                    </HBox.margin>
                </Button>
                <!-- Timer label on the far left-->
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label fx:id="timerLabel" styleClass="timer-label" text="00:00" prefWidth="70">
                        <HBox.margin>
                            <Insets left ="24" />
                        </HBox.margin>
                    </Label>
                </HBox>
                <!-- Spacer to push title to center-->
                <Region HBox.hgrow="ALWAYS" />
                <!-- Question Number Label -->
                <Label fx:id="questionNumberLabel" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 24px;"
                       text="Question 1 of 10" />
                <!-- Spacer to push title to center-->
                <Region HBox.hgrow="ALWAYS" />
                <!-- Score label on the right-->
                <HBox alignment="CENTER">
                    <children>
                        <Label text="Score: " style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 20px;" />
                        <Label fx:id="scoreLabel" styleClass="score-label" text="0">
                            <HBox.margin>
                                <Insets right ="16" />
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>

    <!-- Center: Main Quiz Content -->
    <center>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-padding:20;">
            <children>
                <!-- Question & Image Tile -->
                <VBox alignment="TOP_CENTER" prefWidth="800.0" prefHeight="480" spacing="15.0"
                      style="-fx-background-color: #ffffff; -fx-padding: 20px; -fx-background-radius: 15px;
                         -fx-border-radius: 15px;">
                    <children>
                        <!-- Title Label-->
                        <Label fx:id="quizWelcomeLabel" text="Continent Test" style="-fx-text-fill: white; -fx-font-weight: bold;
                            -fx-font-size: 22px;" />
                        <ImageView fx:id="countryImageView" fitWidth="400" fitHeight="250" preserveRatio="true"
                                   style="-fx-background-color:#f3f4f6; -fx-background-radius:8;" />
                        <Label fx:id="countryImagePlaceholder" text="" style="-fx-font-weight: bold; -fx-font-size: 5px;"/>

                        <Label fx:id="questionLabel" text="What country is this?" wrapText="true"
                               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 20 0 0 0;" />

                        <VBox fx:id="quizOptionsContainer" spacing="15.0">
                            <!-- Feedback Label (will be a new label for this layout) -->
                            <Label fx:id="feedbackMessageLabel" text="" wrapText="true"
                                   style="-fx-text-fill: #dc2626; -fx-font-size: 18px;" />
                        </VBox>
                    </children>
                </VBox>
                <!-- TextField -->
                <VBox alignment="TOP_CENTER" prefWidth="800.0" prefHeight="200.0" spacing="10.0"
                      style="-fx-background-color: #e0e0e0; -fx-padding: 15px; -fx-background-radius: 15px; -fx-border-radius: 15px;">
                    <children>
                        <TextField fx:id="answerField" promptText="Type your answer.." prefWidth="400" prefHeight="50"/>
                    </children>
                </VBox>

                <!-- Submit + Next Question buttons -->
                <HBox spacing="10" alignment="CENTER">
                    <children>
                        <!-- Submit Button -->
                        <Button fx:id="submitButton" text="Submit" onAction="#handleSubmit" visible="false"
                                style="-fx-background-color: #4CAF50; -fx-background-radius: 25;" textFill="WHITE"
                                styleClass="continent-tile-container">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Button>
                        <Button fx:id="nextQuestionButton" text="Next Question" onAction="#handleNextQuestion" visible="false"
                                style="-fx-background-color: #2196F3; -fx-background-radius: 25;" textFill="WHITE"
                                styleClass="continent-tile-container">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>