<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="800.0" prefWidth="1200.0" styleClass="main-background" xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.geoquestkidsexplorer.controllers.MainAppController">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="1200.0" style="-fx-background-color: #3b82f6;
        -fx-padding: 10 20;">
            <children>
                <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 24px;"
                       text="GeoQuest Dashboard" />
                <Region HBox.hgrow="ALWAYS" />
                <HBox alignment="CENTER" style="-fx-background-color: #60a5fa; -fx-background-radius: 25;
            -fx-padding: 10 15; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 0);">
                    <children>
                        <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 20px;" text="Score: ">
                            <padding>
                                <Insets right="5.0" />
                            </padding>
                        </Label>
                        <Label fx:id="scoreLabel" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 20px;"
                               text="0" />
                    </children>
                </HBox>
            </children>
        </HBox>

        <HBox VBox.vgrow="ALWAYS">
            <VBox fx:id="sideBarVBox" alignment="TOP_CENTER" prefWidth="60.0" spacing="20.0" styleClass="side-bar">
                <children>
                    <VBox alignment="CENTER_LEFT" onMouseClicked="#loadHomePage" styleClass="nav-icon-container">
                        <children>
                            <HBox alignment="CENTER_LEFT" spacing="15.0">
                                <children>
                                    <Label styleClass="nav-icon-emoji" text="🏠" />
                                    <Label styleClass="nav-icon-text" text="Dashboard" />
                                </children>
                            </HBox>
                        </children>
                    </VBox>
                    <VBox alignment="CENTER_LEFT" onMouseClicked="#loadFunFacts" styleClass="nav-icon-container">
                        <children>
                            <HBox alignment="CENTER_LEFT" spacing="15.0">
                                <children>
                                    <Label styleClass="nav-icon-emoji" text="📚" />
                                    <Label styleClass="nav-icon-text" text="Fun Facts Library" />
                                </children>
                            </HBox>
                        </children>
                    </VBox>
                    <VBox alignment="CENTER_LEFT" onMouseClicked="#loadMyProgress" styleClass="nav-icon-container">
                        <children>
                            <HBox alignment="CENTER_LEFT" spacing="15.0">
                                <children>
                                    <Label styleClass="nav-icon-emoji" text="👤" />
                                    <Label styleClass="nav-icon-text" text="My Progress" />
                                </children>
                            </HBox>
                        </children>
                    </VBox>
                </children>
                <padding>
                    <Insets top="20.0" />
                </padding>
            </VBox>

            <VBox fx:id="contentVBox" HBox.hgrow="ALWAYS">
            </VBox>

        </HBox>
    </children>
</VBox>