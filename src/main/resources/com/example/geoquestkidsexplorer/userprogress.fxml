<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/css" href="/com/example/geoquestkidsexplorer/styles.css"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.StackPane?>

<?import java.net.URL?>
<?import javafx.scene.control.Tooltip?>
<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.geoquestkidsexplorer.controllers.UserProgressController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <!-- Left: Sidebar (collapsible) -->
    <left>
        <fx:include source="sidebar.fxml" />
    </left>

    <!-- Center: Main Content -->
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1150.0" style="-fx-background-color: #f0f0f0; -fx-padding: 0 7.5 0 7.5px;">
            <children>
                <!-- Navigation Bar -->
                <HBox alignment="CENTER" prefHeight="65.0" prefWidth="1150.0" style="-fx-background-color: #63acbe; -fx-padding: 10 100;">
                    <children>
                        <!--<Button mnemonicParsing="false" onAction="#goBackToMenu" style="-fx-background-color: #60a5fa;
                        -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25; -fx-padding: 10 15;
                        -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 0);" text="🏠 Back to Dashboards" />-->
                        <Region HBox.hgrow="ALWAYS" />
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 24px;"
                                       text="My Explorer Profile" />
                            </children>
                        </HBox>
                        <Region HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <!-- Main Content Area -->
                <VBox alignment="TOP_CENTER" prefHeight="695.0" prefWidth="800.0" spacing="10.0" style="-fx-background-color: #ffffff;
                -fx-padding: 10px; -fx-background-radius: 20px; -fx-border-radius: 20px;
                -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);">
                    <children>
                        <!-- User Profile Container -->
                        <HBox alignment="CENTER" prefWidth="800.0" spacing="30.0" styleClass="main-profile-box">
                            <children>
                                <!-- Avatar Clickable button-->
                                <!-- Avatar: more obviously clickable (inline-styled) -->
                                <VBox alignment="CENTER" spacing="6.0">
                                    <children>
                                        <Button fx:id="avatarButton"
                                                text="🧑‍🎓"
                                                onAction="#handleChangeAvatar"
                                                mnemonicParsing="false"
                                                accessibleText="Change avatar"
                                                style="
                    -fx-font-size: 72px;
                    -fx-background-color: linear-gradient(to bottom, #e0f2fe, #bae6fd);
                    -fx-background-radius: 999;
                    -fx-padding: 8 18 10 18;
                    -fx-border-color: #38bdf8;
                    -fx-border-width: 2;
                    -fx-border-radius: 999;
                    -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.18), 12, 0.2, 0, 3);
                    -fx-cursor: hand;">
                                            <tooltip>
                                                <Tooltip text="Change avatar" />
                                            </tooltip>
                                        </Button>

                                        <!-- helper text under the avatar -->
                                        <Label text="Change Avatar"
                                               style="-fx-text-fill: #0ea5e9; -fx-font-size: 13px; -fx-underline: true; -fx-font-weight: bold;" />
                                    </children>
                                </VBox>

                                <!-- Profile Text -->
                                <VBox alignment="CENTER_LEFT" spacing="5.0">
                                    <children>
                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #555555;" text="Geographic Explorer">
                                            <font>
                                                <Font size="22.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="continentsUnlockedLabel" style="-fx-text-fill: #777777;"
                                               text="Continents Unlocked: 1/7">
                                            <font>
                                                <Font size="18.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="levelsCompletedLabel" style="-fx-text-fill: #777777;"
                                               text="Total Levels Completed: 0/7">
                                            <font>
                                                <Font size="18.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Statistics Tiles (inline-styled cards) -->
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>

                                <!-- Perfect Scores Card -->
                                <VBox alignment="CENTER"
                                      spacing="8"
                                      prefWidth="200" prefHeight="160"
                                      style="-fx-background-color: linear-gradient(to bottom, rgba(255,255,255,0.98), rgba(248,250,252,0.98)), white;
                     -fx-background-insets: 0, 1;
                     -fx-background-radius: 14; -fx-border-radius: 14;
                     -fx-border-color: #e5e7eb; -fx-border-width: 1;
                     -fx-padding: 18 22 16 22;
                     -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.12), 16, 0.12, 0, 4);">
                                    <children>
                                        <Label text="🏆" style="-fx-font-size: 56px;" />
                                        <Label fx:id="perfectScoresLabel" text="0"
                                               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #111827;" />
                                        <Label text="Perfect Score"
                                               style="-fx-font-size: 16px; -fx-font-style: italic; -fx-text-fill: #6b7280;" />
                                    </children>
                                </VBox>

                                <!-- Correct Answers Card -->
                                <VBox alignment="CENTER"
                                      spacing="8"
                                      prefWidth="200" prefHeight="160"
                                      style="-fx-background-color: linear-gradient(to bottom, rgba(255,255,255,0.98), rgba(248,250,252,0.98)), white;
                     -fx-background-insets: 0, 1;
                     -fx-background-radius: 14; -fx-border-radius: 14;
                     -fx-border-color: #e5e7eb; -fx-border-width: 1;
                     -fx-padding: 18 22 16 22;
                     -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.12), 16, 0.12, 0, 4);">
                                    <children>
                                        <Label text="⭐" style="-fx-font-size: 56px;" />
                                        <Label fx:id="correctAnswersLabel" text="100%"
                                               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #111827;" />
                                        <Label text="Correct Answers"
                                               style="-fx-font-size: 16px; -fx-font-style: italic; -fx-text-fill: #6b7280;" />
                                    </children>
                                </VBox>

                                <!-- Levels Completed Card -->
                                <VBox alignment="CENTER"
                                      spacing="8"
                                      prefWidth="200" prefHeight="160"
                                      style="-fx-background-color: linear-gradient(to bottom, rgba(255,255,255,0.98), rgba(248,250,252,0.98)), white;
                     -fx-background-insets: 0, 1;
                     -fx-background-radius: 14; -fx-border-radius: 14;
                     -fx-border-color: #e5e7eb; -fx-border-width: 1;
                     -fx-padding: 18 22 16 22;
                     -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.12), 16, 0.12, 0, 4);">
                                    <children>
                                        <Label text="🏅" style="-fx-font-size: 56px;" />
                                        <Label fx:id="levelsCompletedTileLabel" text="0"
                                               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #111827;" />
                                        <Label text="Levels Completed"
                                               style="-fx-font-size: 16px; -fx-font-style: italic; -fx-text-fill: #6b7280;" />
                                    </children>
                                </VBox>

                                <!-- Continents Unlocked Card -->
                                <VBox alignment="CENTER"
                                      spacing="8"
                                      prefWidth="200" prefHeight="160"
                                      style="-fx-background-color: linear-gradient(to bottom, rgba(255,255,255,0.98), rgba(248,250,252,0.98)), white;
                     -fx-background-insets: 0, 1;
                     -fx-background-radius: 14; -fx-border-radius: 14;
                     -fx-border-color: #e5e7eb; -fx-border-width: 1;
                     -fx-padding: 18 22 16 22;
                     -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.12), 16, 0.12, 0, 4);">
                                    <children>
                                        <Label text="👑" style="-fx-font-size: 56px;" />
                                        <Label fx:id="continentsUnlockedTileLabel" text="1"
                                               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #111827;" />
                                        <Label text="Continents Unlocked"
                                               style="-fx-font-size: 16px; -fx-font-style: italic; -fx-text-fill: #6b7280;" />
                                    </children>
                                </VBox>

                            </children>
                        </HBox>
                    </children>
                    <Button fx:id="logoutButton" text="Logout" onAction="#handleLogoutButtonAction" style="-fx-font-size: 16px;
                            -fx-background-color: #ff6347; -fx-text-fill: white; -fx-font-weight: bold;"
                            styleClass="continent-tile-container"/>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>