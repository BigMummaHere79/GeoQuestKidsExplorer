<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.Button?>
<VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1200.0" spacing="30.0" style="-fx-background-color: #f0f0f0;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.geoquestkidsexplorer.controllers.UserProgressController">
    <children>
        <HBox alignment="CENTER" prefWidth="800.0" spacing="30.0" styleClass="main-profile-box">
            <children>
                <Label fx:id="avatarLabel" style="-fx-font-size: 80px;" text="🧑‍🎓" />
                <VBox alignment="CENTER_LEFT" spacing="5.0">
                    <children>
                        <Label style="-fx-font-weight: bold; -fx-text-fill: #555555;" text="Geographic Explorer">
                            <font>
                                <Font size="22.0" />
                            </font>
                        </Label>
                        <Label fx:id="continentsUnlockedLabel" style="-fx-text-fill: #777777;"
                               text="Continents Unlocked: 1/6">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <Label fx:id="levelsCompletedLabel" style="-fx-text-fill: #777777;"
                               text="Total Levels Completed: 0/54">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </HBox>

        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <VBox alignment="CENTER" styleClass="stat-tile" userData="perfect-scores-tile">
                    <Label style="-fx-font-size: 60px;" text="🏆" />
                    <Label fx:id="perfectScoresLabel" style="-fx-font-weight: bold; -fx-text-fill: #333333;"
                           text="0" />
                    <Label text="Perfect Score">
                        <font>
                            <Font name="System Italic" size="18.0" />
                        </font>
                    </Label>
                </VBox>
                <VBox alignment="CENTER" styleClass="stat-tile" userData="correct-answers-tile">
                    <Label style="-fx-font-size: 60px;" text="⭐" />
                    <Label fx:id="correctAnswersLabel" style="-fx-font-weight: bold; -fx-text-fill: #333333;"
                           text="100%" />
                    <Label text="Correct Answers">
                        <font>
                            <Font name="System Italic" size="18.0" />
                        </font>
                    </Label>
                </VBox>
                <VBox alignment="CENTER" styleClass="stat-tile" userData="levels-completed-tile">
                    <Label style="-fx-font-size: 60px;" text="🏅" />
                    <Label fx:id="levelsCompletedTileLabel" style="-fx-font-weight: bold; -fx-text-fill: #333333;"
                           text="0" />
                    <Label text="Levels Completed">
                        <font>
                            <Font name="System Italic" size="18.0" />
                        </font>
                    </Label>
                </VBox>
                <VBox alignment="CENTER" styleClass="stat-tile" userData="continents-unlocked-tile">
                    <Label style="-fx-font-size: 60px;" text="👑" />
                    <Label fx:id="continentsUnlockedTileLabel" style="-fx-font-weight: bold; -fx-text-fill: #333333;"
                           text="1" />
                    <Label text="Continents Unlocked">
                        <font>
                            <Font name="System Italic" size="18.0" />
                        </font>
                    </Label>
                </VBox>
            </children>
        </HBox>
    </children>
    <Button fx:id="logoutButton" text="Logout" onAction="#handleLogoutButtonAction" style="-fx-font-size: 16px;
                -fx-background-color: #ff6347; -fx-text-fill: white; -fx-font-weight: bold;"/>
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
    </padding>
</VBox>
