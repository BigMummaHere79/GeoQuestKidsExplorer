<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/css" href="/com/example/geoquestkidsexplorer/styles.css"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.StackPane?>

<?import java.net.URL?>
<?import javafx.scene.control.Tooltip?>
<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.geoquestkidsexplorer.controllers.UserProgressController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>
    <!-- Left: Sidebar (collapsible) -->
    <left>
        <fx:include source="sidebar.fxml" />
    </left>

    <!-- Center: Main Content -->
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1150.0" style="-fx-background-color: #f0f0f0; -fx-padding: 0 7.5 0 7.5px;">
            <children>
                <!-- Navigation Bar -->
                <HBox alignment="CENTER" prefHeight="65.0" prefWidth="1150.0" style="-fx-background-color: #63acbe; -fx-padding: 10 100;">
                    <children>
                        <!--<Button mnemonicParsing="false" onAction="#goBackToMenu" style="-fx-background-color: #60a5fa;
                        -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 25; -fx-padding: 10 15;
                        -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 0);" text="🏠 Back to Dashboards" />-->
                        <Region HBox.hgrow="ALWAYS" />
                        <HBox alignment="CENTER" spacing="10.0">
                            <children>
                                <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 24px;"
                                       text="My Explorer Profile" />
                            </children>
                        </HBox>
                        <Region HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>

                <!-- Main Content Area -->
                <VBox alignment="TOP_CENTER" prefHeight="695.0" prefWidth="800.0" spacing="10.0" style="-fx-background-color: #ffffff;
                -fx-padding: 10px; -fx-background-radius: 20px; -fx-border-radius: 20px;
                -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 10, 0, 0, 0);">
                    <children>
                        <!-- User Profile Container -->
                        <HBox alignment="CENTER" prefWidth="800.0" spacing="30.0" styleClass="main-profile-box">
                            <children>
                                <!-- Avatar Clickable button-->
                                <Button fx:id="avatarButton" text="🧑‍🎓" onAction="#handleChangeAvatar" mnemonicParsing="false" style="-fx-font-size: 80px; -fx-background-color: transparent; -fx-border-color: transparent; -fx-padding: 0; -fx-cursor: hand;">
                                    <tooltip>
                                        <Tooltip text="Change avatar" />
                                    </tooltip>
                                </Button>
                                <!-- Profile Text -->
                                <VBox alignment="CENTER_LEFT" spacing="5.0">
                                    <children>
                                        <Label style="-fx-font-weight: bold; -fx-text-fill: #555555;" text="Geographic Explorer">
                                            <font>
                                                <Font size="22.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="continentsUnlockedLabel" style="-fx-text-fill: #777777;"
                                               text="Continents Unlocked: 1/7">
                                            <font>
                                                <Font size="18.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="levelsCompletedLabel" style="-fx-text-fill: #777777;"
                                               text="Total Levels Completed: 0/7">
                                            <font>
                                                <Font size="18.0" />
                                            </font>
                                        </Label>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <!-- Statistics Tiles -->
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <!-- Perfect Scores Tile -->
                                <VBox alignment="CENTER" styleClass="stat-tile" userData="perfect-scores-tile">
                                    <Label style="-fx-font-size: 60px;" text="🏆" />
                                    <Label fx:id="perfectScoresLabel" style="-fx-font-weight: bold; -fx-text-fill: #333333;"
                                           text="0" />
                                    <Label text="Perfect Score">
                                        <font>
                                            <Font name="System Italic" size="18.0" />
                                        </font>
                                    </Label>
                                </VBox>
                                <!-- 100% Correct Answers Tile -->
                                <VBox alignment="CENTER" styleClass="stat-tile" userData="correct-answers-tile">
                                    <Label style="-fx-font-size: 60px;" text="⭐" />
                                    <Label fx:id="correctAnswersLabel" style="-fx-font-weight: bold; -fx-text-fill: #333333;"
                                           text="100%" />
                                    <Label text="Correct Answers">
                                        <font>
                                            <Font name="System Italic" size="18.0" />
                                        </font>
                                    </Label>
                                </VBox>
                                <!-- Levels Completed Tile -->
                                <VBox alignment="CENTER" styleClass="stat-tile" userData="levels-completed-tile">
                                    <Label style="-fx-font-size: 60px;" text="🏅" />
                                    <Label fx:id="levelsCompletedTileLabel" style="-fx-font-weight: bold; -fx-text-fill: #333333;"
                                           text="0" />
                                    <Label text="Levels Completed">
                                        <font>
                                            <Font name="System Italic" size="18.0" />
                                        </font>
                                    </Label>
                                </VBox>
                                <!-- Continents Unlocked Tile -->
                                <VBox alignment="CENTER" styleClass="stat-tile" userData="continents-unlocked-tile">
                                    <Label style="-fx-font-size: 60px;" text="👑" />
                                    <Label fx:id="continentsUnlockedTileLabel" style="-fx-font-weight: bold; -fx-text-fill: #333333;"
                                           text="1" />
                                    <Label text="Continents Unlocked">
                                        <font>
                                            <Font name="System Italic" size="18.0" />
                                        </font>
                                    </Label>
                                </VBox>
                            </children>
                        </HBox>
                    </children>
                    <Button fx:id="logoutButton" text="Logout" onAction="#handleLogoutButtonAction" style="-fx-font-size: 16px;
                            -fx-background-color: #ff6347; -fx-text-fill: white; -fx-font-weight: bold;"
                            styleClass="continent-tile-container"/>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>