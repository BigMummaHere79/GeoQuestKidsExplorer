      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.geoquestkidsexplorer.controllers.OceaniaController">

    <Label text="Welcome to Oceania!" style="-fx-font-size: 24px;" />

    <Label text="Would you like to:" style="-fx-font-size: 18px;" />

    <HBox spacing="20" alignment="CENTER">
        <Button text="Learn" onAction="#handleLearn"/>
        <Button text="Test Your Knowledge" onAction="#handleTest"/>
    </HBox>

    <Button text="Back to Home" onAction="#handleBackToHome"/>

</VBox>
