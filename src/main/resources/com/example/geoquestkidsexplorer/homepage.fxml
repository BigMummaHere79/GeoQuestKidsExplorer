<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<?import javafx.scene.layout.TilePane?>
<VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1200.0" spacing="30.0"
      style="-fx-background-color: white;"
      xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.geoquestkidsexplorer.controllers.HomePageController">
    <children>
        <HBox alignment="CENTER_LEFT" spacing="20.0"
              style="-fx-background-color: #ffffff; -fx-padding: 20px;
                     -fx-background-radius: 10px;
                     -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
            <children>
                <VBox alignment="CENTER"
                      style="-fx-background-color: #e0f2f1; -fx-background-radius: 100%;
                             -fx-min-width: 100px; -fx-min-height: 100px; -fx-max-width: 100px; -fx-max-height: 100px;
                             -fx-alignment: center;">
                    <children>
                        <Label fx:id="explorerAvatarLabel" style="-fx-font-size: 60px;" text="👦" />
                    </children>
                </VBox>
                <VBox alignment="CENTER_LEFT" spacing="5.0">
                    <children>
                        <Label fx:id="explorerNameLabel" text="Welcome, Explorer Name!">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                        <Label text="Ready to start your Adventure!">
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Continents as Uniform Cards -->
        <TilePane fx:id="continentPane"
                  alignment="CENTER"
                  hgap="20" vgap="20"
                  prefColumns="3"
                  style="-fx-padding: 20;">
            <!-- Antarctica -->
            <Button fx:id="btnAntarctica" onAction="#handleAntarcticaClick"
                    style="-fx-background-color: transparent; -fx-padding: 0;">
                <graphic>
                    <VBox alignment="CENTER" spacing="10"
                          prefWidth="220" prefHeight="220"
                          style="-fx-background-color: #c8e6c9; -fx-background-radius: 10; -fx-padding: 12;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                        <children>
                            <ImageView fitWidth="180" fitHeight="140" preserveRatio="true" smooth="true" cache="true">
                                <image>
                                    <Image backgroundLoading="true"
                                           url="https://t4.ftcdn.net/jpg/07/22/12/43/360_F_722124358_pmAyxjaWPEOX3pELDGzNOjsjHu2NcCfi.jpg"/>
                                </image>
                            </ImageView>
                            <Label text="Antarctica">
                                <font><Font name="System Bold" size="16"/></font>
                            </Label>
                        </children>
                    </VBox>
                </graphic>
            </Button>

            <!-- Oceania -->
            <Button fx:id="btnOceania" onAction="#handleOceaniaClick"
                    style="-fx-background-color: transparent; -fx-padding: 0;">
                <graphic>
                    <VBox alignment="CENTER" spacing="10"
                          prefWidth="220" prefHeight="220"
                          style="-fx-background-color: #ffcdd2; -fx-background-radius: 10; -fx-padding: 12;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                        <children>
                            <ImageView fitWidth="180" fitHeight="140" preserveRatio="true" smooth="true" cache="true">
                                <image>
                                    <Image backgroundLoading="true"
                                           url="https://static.vecteezy.com/system/resources/previews/003/087/848/non_2x/outline-simple-map-of-oceania-free-vector.jpg"/>
                                </image>
                            </ImageView>
                            <Label text="Oceania">
                                <font><Font name="System Bold" size="16"/></font>
                            </Label>
                        </children>
                    </VBox>
                </graphic>
            </Button>

            <!-- South America -->
            <Button fx:id="btnSouthAmerica" onAction="#handleSouthAmericaClick"
                    style="-fx-background-color: transparent; -fx-padding: 0;">
                <graphic>
                    <VBox alignment="CENTER" spacing="10"
                          prefWidth="220" prefHeight="220"
                          style="-fx-background-color: #b3e5fc; -fx-background-radius: 10; -fx-padding: 12;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                        <children>
                            <ImageView fitWidth="180" fitHeight="140" preserveRatio="true" smooth="true" cache="true">
                                <image>
                                    <Image backgroundLoading="true"
                                           url="https://i.pinimg.com/564x/29/ed/fc/29edfcb9db4afce9630791fc13a5ef59.jpg"/>
                                </image>
                            </ImageView>
                            <Label text="South America">
                                <font><Font name="System Bold" size="16"/></font>
                            </Label>
                        </children>
                    </VBox>
                </graphic>
            </Button>

            <!-- North America -->
            <Button fx:id="btnNorthAmerica" onAction="#handleNorthAmericaClick"
                    style="-fx-background-color: transparent; -fx-padding: 0;">
                <graphic>
                    <VBox alignment="CENTER" spacing="10"
                          prefWidth="220" prefHeight="220"
                          style="-fx-background-color: #ffe0b2; -fx-background-radius: 10; -fx-padding: 12;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                        <children>
                            <ImageView fitWidth="180" fitHeight="140" preserveRatio="true" smooth="true" cache="true">
                                <image>
                                    <Image backgroundLoading="true"
                                           url="https://i.pinimg.com/originals/67/58/ac/6758acde861811f6d32e7a678d334562.png"/>
                                </image>
                            </ImageView>
                            <Label text="North America">
                                <font><Font name="System Bold" size="16"/></font>
                            </Label>
                        </children>
                    </VBox>
                </graphic>
            </Button>

            <!-- Europe -->
            <Button fx:id="btnEurope" onAction="#handleEuropeClick"
                    style="-fx-background-color: transparent; -fx-padding: 0;">
                <graphic>
                    <VBox alignment="CENTER" spacing="10"
                          prefWidth="220" prefHeight="220"
                          style="-fx-background-color: #e1bee7; -fx-background-radius: 10; -fx-padding: 12;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                        <children>
                            <ImageView fitWidth="180" fitHeight="140" preserveRatio="true" smooth="true" cache="true">
                                <image>
                                    <Image backgroundLoading="true"
                                           url="https://img.freepik.com/premium-vector/outline-map-europe-white-background-vector-map-with-contour_652994-2550.jpg"/>
                                </image>
                            </ImageView>
                            <Label text="Europe">
                                <font><Font name="System Bold" size="16"/></font>
                            </Label>
                        </children>
                    </VBox>
                </graphic>
            </Button>

            <!-- Asia -->
            <Button fx:id="btnAsia" onAction="#handleAsiaClick"
                    style="-fx-background-color: transparent; -fx-padding: 0;">
                <graphic>
                    <VBox alignment="CENTER" spacing="10"
                          prefWidth="220" prefHeight="220"
                          style="-fx-background-color: #d1c4e9; -fx-background-radius: 10; -fx-padding: 12;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                        <children>
                            <ImageView fitWidth="180" fitHeight="140" preserveRatio="true" smooth="true" cache="true">
                                <image>
                                    <Image backgroundLoading="true"
                                           url="https://i.pinimg.com/736x/5d/e5/1e/5de51e06c7410ae41d6cc0bc431d0e57.jpg"/>
                                </image>
                            </ImageView>
                            <Label text="Asia">
                                <font><Font name="System Bold" size="16"/></font>
                            </Label>
                        </children>
                    </VBox>
                </graphic>
            </Button>

            <!-- Africa -->
            <Button fx:id="btnAfrica" onAction="#handleAfricaClick"
                    style="-fx-background-color: transparent; -fx-padding: 0;">
                <graphic>
                    <VBox alignment="CENTER" spacing="10"
                          prefWidth="220" prefHeight="220"
                          style="-fx-background-color: #ffecb3; -fx-background-radius: 10; -fx-padding: 12;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                        <children>
                            <ImageView fitWidth="180" fitHeight="140" preserveRatio="true" smooth="true" cache="true">
                                <image>
                                    <Image backgroundLoading="true"
                                           url="https://gisgeography.com/wp-content/uploads/2023/12/Africa-Country-Blank-Map.jpg"/>
                                </image>
                            </ImageView>
                            <Label text="Africa">
                                <font><Font name="System Bold" size="16"/></font>
                            </Label>
                        </children>
                    </VBox>
                </graphic>
            </Button>
        </TilePane>



        <HBox alignment="CENTER" spacing="20.0">
            <children>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="250.0" spacing="10.0"
                      style="-fx-background-color: #c8e6c9; -fx-background-radius: 10px;
                             -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                    <children>
                        <Label style="-fx-font-size: 60px;" text="🏆" />
                        <Label fx:id="perfectScoreLabel" style="-fx-font-weight: bold; -fx-font-size: 28px;" text="0" />
                        <Label style="-fx-font-weight: bold;" text="Perfect Score">
                            <font>
                                <Font name="System Italic" size="18.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="250.0" spacing="10.0"
                      style="-fx-background-color: #ffcdd2; -fx-background-radius: 10px;
                             -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                    <children>
                        <Label style="-fx-font-size: 60px;" text="⭐" />
                        <Label fx:id="correctAnswerLabel" style="-fx-font-weight: bold; -fx-font-size: 28px;" text="100%" />
                        <Label style="-fx-font-weight: bold;" text="Correct Answers">
                            <font>
                                <Font name="System Italic" size="18.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="250.0" spacing="10.0"
                      style="-fx-background-color: #b3e5fc; -fx-background-radius: 10px;
                             -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                    <children>
                        <Label style="-fx-font-size: 60px;" text="🌍" />
                        <Label style="-fx-font-weight: bold;" text="Geographic Explorer">
                            <font>
                                <Font name="System Italic" size="20.0" />
                            </font>
                        </Label>
                        <Label fx:id="currentLevelLabel" style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Current Level" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" prefHeight="200.0" prefWidth="250.0" spacing="10.0"
                      style="-fx-background-color: #ffe0b2; -fx-background-radius: 10px;
                             -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                    <children>
                        <Label style="-fx-font-size: 60px;" text="🏅" />
                        <Label fx:id="levelsCompletedLabel" style="-fx-font-weight: bold; -fx-font-size: 28px;" text="0" />
                        <Label style="-fx-font-weight: bold;" text="Levels Completed">
                            <font>
                                <Font name="System Italic" size="18.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>
            </children>
        </HBox>

        <Button text="Start Your Adventure!"
                onAction="#startNewAdventure"
                prefWidth="220"
                style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8;" />
    </children>
</VBox>
