<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/css" href="/com/example/geoquestkidsexplorer/styles.css"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.layout.TilePane?>
<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.geoquestkidsexplorer.controllers.HomePageController">
    <!-- Left: Sidebar (collapsible) -->
    <left>
        <fx:include source="sidebar.fxml" />
    </left>

    <!-- Center: Main Content -->
    <center>
        <VBox alignment="TOP_CENTER" prefHeight="800.0" prefWidth="1150.0" style="-fx-background-color: #f0f0f0; -fx-padding: 0 7.5 0 7.5px;">
            <children>
                <!-- Navigation Bar -->
                <HBox alignment="CENTER" prefHeight="65.0" prefWidth="1150.0" style="-fx-background-color: #3b82f6; -fx-padding: 10 100;">
                    <children>
                        <!-- Logo Image -->
                        <ImageView>
                            <image >
                                <Image url="@images/geoquestlogo.PNG" preserveRatio="true" />
                            </image>
                            <fitWidth>65.0</fitWidth>
                            <fitHeight>65.0</fitHeight>
                        </ImageView>
                        <Label alignment="CENTER_LEFT" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 24px;"
                               text="GeoQuest Dashboards" />
                        <Region HBox.hgrow="ALWAYS" />
                        <HBox alignment="CENTER" style="-fx-background-color: #60a5fa; -fx-background-radius: 25; -fx-padding: 10 15;
                        -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 0);">
                            <children>
                                <Label style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 20px;" text="Score: ">
                                    <padding>
                                        <Insets right="75.0" />
                                    </padding>
                                </Label>
                                <Label fx:id="scoreLabel" style="-fx-text-fill: white; -fx-font-weight: bold;
                                       -fx-font-size: 20px;" text="0" />
                            </children>
                        </HBox>
                    </children>
                </HBox>
                <!-- Main Content Container -->
                <VBox alignment="TOP_CENTER" prefHeight="695.0" prefWidth="800.0" spacing="10.0" style="-fx-background-color: #ffffff;
                    -fx-padding: 10px; -fx-background-radius: 20px; -fx-border-radius: 20px;
                    -fx-effect: dropshadow(three-pass-light, rgba(0,0,0,0.2), 10, 0, 0, 0);">
                    <children>
                        <!-- Welcome Container -->
                        <VBox alignment="CENTER" prefHeight="50.0" prefWidth="1000.0" style="-fx-padding: 10px;">
                            <children>
                                <HBox alignment="CENTER" spacing="5.0">
                                    <children>
                                        <Label fx:id="avatarLabel" style="-fx-font-size: 60px;" text="" />
                                        <VBox alignment="CENTER_LEFT" spacing="5.0">
                                            <children>
                                                <Label fx:id="welcomeLabel" text="Welcome, Explorer!">
                                                    <font>
                                                        <Font name="System Bold" size="25.0" />
                                                    </font>
                                                </Label>
                                                <Label fx:id="subWelcomeLabel" text="Ready for a new Adventure!">
                                                    <font>
                                                        <Font size="18.0" />
                                                    </font>
                                                </Label>
                                            </children>
                                        </VBox>
                                    </children>
                                </HBox>
                                <Region HBox.hgrow="ALWAYS" />
                            </children>
                        </VBox>
                        <!-- Continents as Uniform Cards -->
                        <TilePane fx:id="continentPane"
                                  alignment="CENTER"
                                  hgap="20" vgap="20"
                                  prefColumns="3"
                                  style="-fx-padding: 20;">
                            <!-- Antarctica -->
                            <Button fx:id="btnAntarctica" onAction="#handleContinentClick"
                                    style="-fx-background-color: transparent; -fx-padding: 0;">
                                <graphic>
                                    <VBox alignment="CENTER" spacing="10"
                                          prefWidth="220" prefHeight="220"
                                          style="-fx-background-color: #c8e6c9; -fx-background-radius: 10; -fx-padding: 12;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                                        <children>
                                            <ImageView fitWidth="180" fitHeight="140" preserveRatio="true" smooth="true" cache="true">
                                                <image>
                                                    <Image backgroundLoading="true"
                                                           url="https://t4.ftcdn.net/jpg/07/22/12/43/360_F_722124358_pmAyxjaWPEOX3pELDGzNOjsjHu2NcCfi.jpg"/>
                                                </image>
                                            </ImageView>
                                            <Label text="Antarctica">
                                                <font><Font name="System Bold" size="16"/></font>
                                            </Label>
                                        </children>
                                    </VBox>
                                </graphic>
                            </Button>

                            <!-- Oceania -->
                            <Button fx:id="btnOceania" onAction="#handleContinentClick"
                                    style="-fx-background-color: transparent; -fx-padding: 0;">
                                <graphic>
                                    <VBox alignment="CENTER" spacing="10"
                                          prefWidth="220" prefHeight="220"
                                          style="-fx-background-color: #ffcdd2; -fx-background-radius: 10; -fx-padding: 12;
                                          -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                                        <children>
                                            <ImageView fitWidth="180" fitHeight="140" preserveRatio="true" smooth="true" cache="true">
                                                <image>
                                                    <Image backgroundLoading="true"
                                                           url="https://static.vecteezy.com/system/resources/previews/003/087/848/non_2x/outline-simple-map-of-oceania-free-vector.jpg"/>
                                                </image>
                                            </ImageView>
                                            <Label text="Oceania">
                                                <font><Font name="System Bold" size="16"/></font>
                                            </Label>
                                        </children>
                                    </VBox>
                                </graphic>
                            </Button>

                            <!-- South America -->
                            <Button fx:id="btnSouthAmerica" onAction="#handleContinentClick"
                                    style="-fx-background-color: transparent; -fx-padding: 0;">
                                <graphic>
                                    <VBox alignment="CENTER" spacing="10"
                                          prefWidth="220" prefHeight="220"
                                          style="-fx-background-color: #b3e5fc; -fx-background-radius: 10; -fx-padding: 12;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                                        <children>
                                            <ImageView fitWidth="180" fitHeight="140" preserveRatio="true" smooth="true" cache="true">
                                                <image>
                                                    <Image backgroundLoading="true"
                                                           url="https://i.pinimg.com/564x/29/ed/fc/29edfcb9db4afce9630791fc13a5ef59.jpg"/>
                                                </image>
                                            </ImageView>
                                            <Label text="South America">
                                                <font><Font name="System Bold" size="16"/></font>
                                            </Label>
                                        </children>
                                    </VBox>
                                </graphic>
                            </Button>

                            <!-- North America -->
                            <Button fx:id="btnNorthAmerica" onAction="#handleContinentClick"
                                    style="-fx-background-color: transparent; -fx-padding: 0;">
                                <graphic>
                                    <VBox alignment="CENTER" spacing="10"
                                          prefWidth="220" prefHeight="220"
                                          style="-fx-background-color: #ffe0b2; -fx-background-radius: 10; -fx-padding: 12;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                                        <children>
                                            <ImageView fitWidth="180" fitHeight="140" preserveRatio="true" smooth="true" cache="true">
                                                <image>
                                                    <Image backgroundLoading="true"
                                                           url="https://i.pinimg.com/originals/67/58/ac/6758acde861811f6d32e7a678d334562.png"/>
                                                </image>
                                            </ImageView>
                                            <Label text="North America">
                                                <font><Font name="System Bold" size="16"/></font>
                                            </Label>
                                        </children>
                                    </VBox>
                                </graphic>
                            </Button>

                            <!-- Europe -->
                            <Button fx:id="btnEurope" onAction="#handleContinentClick"
                                    style="-fx-background-color: transparent; -fx-padding: 0;">
                                <graphic>
                                    <VBox alignment="CENTER" spacing="10"
                                          prefWidth="220" prefHeight="220"
                                          style="-fx-background-color: #e1bee7; -fx-background-radius: 10; -fx-padding: 12;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                                        <children>
                                            <ImageView fitWidth="180" fitHeight="140" preserveRatio="true" smooth="true" cache="true">
                                                <image>
                                                    <Image backgroundLoading="true"
                                                           url="https://img.freepik.com/premium-vector/outline-map-europe-white-background-vector-map-with-contour_652994-2550.jpg"/>
                                                </image>
                                            </ImageView>
                                            <Label text="Europe">
                                                <font><Font name="System Bold" size="16"/></font>
                                            </Label>
                                        </children>
                                    </VBox>
                                </graphic>
                            </Button>

                            <!-- Asia -->
                            <Button fx:id="btnAsia" onAction="#handleContinentClick"
                                    style="-fx-background-color: transparent; -fx-padding: 0;">
                                <graphic>
                                    <VBox alignment="CENTER" spacing="10"
                                          prefWidth="220" prefHeight="220"
                                          style="-fx-background-color: #d1c4e9; -fx-background-radius: 10; -fx-padding: 12;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                                        <children>
                                            <ImageView fitWidth="180" fitHeight="140" preserveRatio="true" smooth="true" cache="true">
                                                <image>
                                                    <Image backgroundLoading="true"
                                                           url="https://i.pinimg.com/736x/5d/e5/1e/5de51e06c7410ae41d6cc0bc431d0e57.jpg"/>
                                                </image>
                                            </ImageView>
                                            <Label text="Asia">
                                                <font><Font name="System Bold" size="16"/></font>
                                            </Label>
                                        </children>
                                    </VBox>
                                </graphic>
                            </Button>

                            <!-- Africa -->
                            <Button fx:id="btnAfrica" onAction="#handleContinentClick"
                                    style="-fx-background-color: transparent; -fx-padding: 0;">
                                <graphic>
                                    <VBox alignment="CENTER" spacing="10"
                                          prefWidth="220" prefHeight="220"
                                          style="-fx-background-color: #ffecb3; -fx-background-radius: 10; -fx-padding: 12;
                         -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 5, 0, 0, 0);">
                                        <children>
                                            <ImageView fitWidth="180" fitHeight="140" preserveRatio="true" smooth="true" cache="true">
                                                <image>
                                                    <Image backgroundLoading="true"
                                                           url="https://gisgeography.com/wp-content/uploads/2023/12/Africa-Country-Blank-Map.jpg"/>
                                                </image>
                                            </ImageView>
                                            <Label text="Africa">
                                                <font><Font name="System Bold" size="16"/></font>
                                            </Label>
                                        </children>
                                    </VBox>
                                </graphic>
                            </Button>
                        </TilePane>
                        <!-- Additional Buttons -->
                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <!-- Start Adventure Button -->
                                <Button fx:id="startAdventureButton" mnemonicParsing="false" onAction="#startNewAdventure"
                                        prefWidth="350.0" style="-fx-background-color: #4caf50; -fx-text-fill: white;
                                        -fx-font-weight: bold; -fx-font-size: 16px; -fx-background-radius: 5px;"
                                        text="🌎  Start Your New Adventure!">
                                    <VBox.margin>
                                        <Insets top="5.0" />
                                    </VBox.margin>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </VBox>
            </children>
        </VBox>
    </center>
</BorderPane>
