<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.geoquestkidsexplorer.controllers.FlashcardsController"
      alignment="CENTER" spacing="20.0"
      prefHeight="400.0" prefWidth="600.0">

    <Label fx:id="regionLabel" text="Flashcards"
           style="-fx-font-size: 36px; -fx-font-weight: bold;" />

    <StackPane fx:id="flashcardStack" alignment="CENTER" prefWidth="300" prefHeight="200">
        <ImageView fx:id="countryImageView" fitWidth="300" fitHeight="200" preserveRatio="true" />
        <Label fx:id="backTextLabel" text=""
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-background-color: white; -fx-alignment: center;
               -fx-padding: 20;"  visible="false" />
    </StackPane>

    <Button text="Next" onAction="#handleNextCountry"
            style="-fx-background-color: #90caf9; -fx-background-radius: 10; -fx-padding: 12; -fx-text-fill: #000000;
            -fx-font-size: 14px; -fx-font-weight: bold;" />

    <Button text="Back to Home" onAction="#handleBackToHome"
            style="-fx-background-color: #f48fb1; -fx-background-radius: 10; -fx-padding: 12; -fx-text-fill: #000000;
            -fx-font-size: 14px; -fx-font-weight: bold;" />
</VBox>
