<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/css" href="/com/example/geoquestkidsexplorer/styles.css"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.geoquestkidsexplorer.controllers.AntarcticaController">

    <!-- Top navigation bar -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="65.0"
              style="-fx-background-color: #3b82f6; -fx-padding: 10 100;">
            <children>
                <Button mnemonicParsing="false" onAction="#backToContinents"
                        style="-fx-background-color: #60a5fa; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-background-radius: 25;
                               -fx-padding: 10 15; -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 0);"
                        text="⬅️ Back to Continents" />
                <Label alignment="CENTER_LEFT"
                       style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 24px;
                              -fx-padding: 0 0 0 10px;"
                       text="Antarctica" />
                <Region HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </top>

    <!-- Center: Fun Info + button to go home -->
    <center>
        <VBox alignment="CENTER" spacing="25.0" style="-fx-padding: 50;">
            <Label text="🎉 Let’s Learn About Antarctica!"
                   style="-fx-font-size: 32px; -fx-font-weight: bold;"/>
            <Label text="Did you know?" style="-fx-font-size: 24px;"/>

            <!-- Fun fact text; you can swap which fact appears or cycle among them -->
            <Label text="🌨 Antarctica is technically a desert because it gets very little precipitation."
                   wrapText="true"
                   style="-fx-font-size: 20px; -fx-text-alignment: center;"/>

            <Label text="❄ About 98% of Antarctica is covered by ice, storing around 70% of Earth’s fresh water!"
                   wrapText="true"
                   style="-fx-font-size: 20px; -fx-text-alignment: center;"/>

            <Button text="proceed to next level" onAction="#goHome"
                    style="-fx-font-size: 18px; -fx-padding: 10 20;"/>
        </VBox>
    </center>

</BorderPane>
