<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/css" href="/com/example/geoquestkidsexplorer/styles.css"?>

<!--Import all the JavaFX UI elements that I'll be using-->
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>

<!--Root Container-->
<?import javafx.scene.control.TextField?>
<BorderPane prefHeight="800.0" prefWidth="1200.0"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.geoquestkidsexplorer.controllers.TestQuizSouthAmericaController">

<!--    Navigation Bar-->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="65.0" style="-fx-background-color: #3b82f6; -fx-padding: 10 20;" spacing="10">
            <children>
<!--                Back Button-->
                <Button onAction="#backToGameModes" style="-fx-background-color: #60a5fa; -fx-text-fill: white;
                               -fx-font-weight: bold; -fx-background-radius: 25; -fx-padding: 10 15;
                               -fx-effect: dropshadow(two-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 0);"
                        text="⬅️ Back" />
<!--                Timer label on the far left-->
                <HBox spacing="5" alignment="CENTER_LEFT" style="-fx-background-color: #60a5fa; -fx-background-radius: 25; -fx-padding: 10 15;">
                    <Label fx:id="timerLabel" text="00:00" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 20px;" />
                </HBox>

<!--                Spacer to push title to center-->
                <Region HBox.hgrow="ALWAYS" />

<!--                Title Label-->
                <Label fx:id="titleLabel" text="Antarctica Test" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 22px;" />

                <!-- Another spacer to keep score on right -->
                <Region HBox.hgrow="ALWAYS" />

<!--                Score label on the right-->
                <HBox alignment="CENTER" style="-fx-background-color: #60a5fa; -fx-background-radius: 25; -fx-padding: 10 15;">
                    <children>
                        <Label text="Score: " style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 20px;" />
                        <Label fx:id="scoreLabel" text="0" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 20px;" />
                    </children>
                </HBox>
            </children>
        </HBox>
    </top>

    <!-- Center: Main Quiz Content -->
    <center>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-padding:20;">
            <children>

                <!-- Question & Image Tile -->
                <VBox alignment="TOP_CENTER" prefWidth="800.0" prefHeight="480" spacing="15.0"
                      style="-fx-background-color: #ffffff; -fx-padding: 20px; -fx-background-radius: 15px;
                         -fx-border-radius: 15px;">
                    <children>
                        <ImageView fx:id="countryImageView" fitWidth="400" fitHeight="250" preserveRatio="true"
                                   style="-fx-background-color:#f3f4f6; -fx-background-radius:8;" />

                        <!-- Container to push the label to the bottom of white VBox -->
                        <Region VBox.vgrow="ALWAYS" />

                        <Label fx:id="questionLabel" text="What country is this?" wrapText="true"
                               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 20 0 0 0;" />

                        <VBox fx:id="quizOptionsContainer" spacing="15.0"/>
                    </children>
                </VBox>

                <!-- Feedback goes here -->
                <Label fx:id="feedbackLabel" text="" wrapText="true"
                       style="-fx-text-fill: #dc2626; -fx-font-size: 18px;" />

                <!-- TextField -->
                <VBox alignment="TOP_CENTER" prefWidth="800.0" prefHeight="200.0" spacing="10.0"
                      style="-fx-background-color: #e0e0e0; -fx-padding: 15px; -fx-background-radius: 15px; -fx-border-radius: 15px;">
                    <children>
                        <TextField fx:id="answerField" promptText="Type your answer.." prefWidth="400" prefHeight="50"/>
                    </children>
                </VBox>

                <!-- Submit + Next Question buttons -->
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <!-- Submit Button -->
                        <Button text="Submit" onAction="#handleSubmit">
                            <HBox.margin>
                                <Insets left="8"/>
                            </HBox.margin>
                        </Button>

                        <!-- Next Question Button -->
                        <Button fx:id="nextQuestionButton" text="Next Question" onAction="#nextQuestion"/>
                    </children>
                </HBox>

            </children>
        </VBox>
    </center>
</BorderPane>